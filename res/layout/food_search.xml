<?xml version="1.0" encoding="utf-8"?>
<!--Optional parameters:-->
<!--page - The page # of results to return.-->
<!--per_page - The # of results to return per page (max is 25).-->
<!--sort_by - How to order the results; calories, total_fat, total_carbs, protein, or name. (If not set it defaults to a "best match" algorithm.)-->
<!--reverse - Set to true to reverse the sorting order.-->
<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  	<LinearLayout
  		android:id="@+id/food_search_layout"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:orientation="horizontal"
  		android:layout_alignParentTop="true"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentRight="true">
<EditText 
	android:hint="Search foods" 
	android:id="@+id/food_search" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_weight="3"/>
<Button 
	android:text="Search" 
	android:id="@+id/food_search_button" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:onClick="onSearchFoods"/>
</LinearLayout>
<TextView 
	android:text="@string/goal_calories" 
	android:id="@+id/goal_calories" 
	android:layout_below="@id/food_search_layout" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
</TextView>
<TextView
	android:text="@string/goal_fat"
	android:id="@+id/goal_fat"
	android:layout_below="@+id/goal_calories"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
</TextView>
<TextView
	android:text="@string/goal_carbs"
	android:id="@+id/goal_carbs"
	android:layout_below="@+id/goal_fat"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
</TextView>
<TextView
	android:text="@string/goal_protein"
	android:id="@+id/goal_protein"
	android:layout_below="@+id/goal_carbs"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
</TextView>
<Button
	android:text="@string/barcode_scan"
	android:id="@+id/food_barcode_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_below="@id/goal_protein"
	android:onClick="onClickBarcodeScan"/>
<Button
	android:text="@string/favorite_foods"
	android:id="@+id/food_favorite_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_below="@id/food_barcode_button"
	android:onClick="onListFavoriteFoods"/>
<Button 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_below="@+id/food_favorite_button" 
	android:id="@+id/food_log_entry" 
	android:text="@string/nutrition_logs"
	android:onClick="onViewFoodLogs"/>

</RelativeLayout>
