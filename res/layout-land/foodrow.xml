<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/foodrow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">
    <ImageView
        android:id="@+id/foodrow_Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/icon" />
        />
<TextView 
	android:id="@+id/foodrow_Name"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="Name"
	android:textSize="15sp" 
	android:layout_toRightOf="@+id/foodrow_Icon" 
	/>
<TextView
	android:id="@+id/foodrow_Size" 
	android:layout_width="wrap_content" 
	android:text="Serving Size" 
	android:layout_height="wrap_content"
	android:textSize="12sp"
	android:layout_toRightOf="@+id/foodrow_Icon" 
	android:layout_below="@+id/foodrow_Name" 
	/>
<TextView
	android:id="@+id/foodrow_Nutrition1" 
	android:layout_width="wrap_content" 
	android:text="Nutrition" 
	android:layout_height="wrap_content"
	android:textSize="10sp"
	android:layout_toRightOf="@+id/foodrow_Icon" 
	android:layout_below="@+id/foodrow_Size" 
	/>
	<TextView
	android:id="@+id/foodrow_Nutrition2" 
	android:layout_width="wrap_content" 
	android:text="Nutrition" 
	android:layout_height="wrap_content"
	android:textSize="10sp"
	android:layout_toRightOf="@+id/foodrow_Icon" 
	android:layout_below="@+id/foodrow_Nutrition1" 
	/>
</RelativeLayout>